<Window x:Class="WarehouseApp.WinForms.LoginForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WarehouseApp.WinForms"
        mc:Ignorable="d"
        Title="LoginForm" Height="230" Width="400"
        ResizeMode="NoResize">
    <Grid>
        <Label Content="E-mail" HorizontalAlignment="Left" Height="26" Margin="60,30,0,0" VerticalAlignment="Top" Width="64" />
        <Label Content="Hasło" HorizontalAlignment="Left" Height="23" Margin="60,90,0,0" VerticalAlignment="Top" Width="64" />
        <TextBox Name="tb_mail" Text="" HorizontalAlignment="Left" Height="26" Margin="125,30,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="190" />
        <PasswordBox Name="pb_pass" Password="" HorizontalAlignment="Left" Height="32" Margin="125,90,0,0" VerticalAlignment="Top" Width="190 "/>
        <Button Content="Loguj" HorizontalAlignment="Left" Height="27" Margin="60,150,0,0" VerticalAlignment="Top" Width="90" Click="btn_LogIn" />
        <Button Content="Anuluj" HorizontalAlignment="Right" Height="27" Margin="0,150,80,0" VerticalAlignment="Top" Width="90" IsCancel="True" />
    </Grid>
</Window>
